<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D7CCC8"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_marginVertical="50dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:ems="10"
            android:text="Log into
                            your account"
            android:layout_marginVertical="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingTop="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:background="@color/white"
            android:layout_marginVertical="5dp"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jack.taylor@gmail.com"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong email"
             android:textColor="#FF0000"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:orientation="vertical"
         >

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:background="@color/white"
           android:paddingLeft="10dp"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="●●●●●●●●●"
            android:textStyle="bold"

            android:textSize="20dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Forgot?"

            android:paddingLeft="140dp"
            android:textSize="20dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="#F0EFE6"
        android:orientation="vertical"
        android:background="#D7CCC8"
        android:padding="10dp">
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="log in"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:background="@drawable/login"

        />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="35dp"
            android:text="or sign in up social account"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
       android:layout_gravity="center"
         >
        <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:layout_marginTop="0dp"
                android:background="@drawable/test"
                android:src="@mipmap/fb" />
        </LinearLayout>

      <LinearLayout
          android:layout_width="160dp"
          android:layout_height="wrap_content">
          <ImageButton
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_margin="6dp"
              android:layout_weight="1"
              android:background="@drawable/button_new"
              android:backgroundTint="#00acee"
              android:padding="5dp"
              android:layout_marginTop="0dp"
              android:src="@mipmap/twitter" />
      </LinearLayout>


    </LinearLayout>
</LinearLayout>